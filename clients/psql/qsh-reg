#!/bin/bash

QSH_BASE=~/.qsh
QSH_CONNECTIONS=$QSH_BASE/connections

CONNECTION_FILE=$1
PASSWORD=$2

CONNECTION=$(basename "$CONNECTION_FILE");
CLIENT_CONNECTION_FILE=$QSH_CONNECTIONS/.${CONNECTION}.reg

cat <<EOF > "$CLIENT_CONNECTION_FILE"
*:*:*:*:$PASSWORD
EOF

chmod 0600 "$CLIENT_CONNECTION_FILE";

